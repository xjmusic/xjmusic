<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<VBox styleClass="settings-modal" stylesheets="@/styles/default-theme.css"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.xj.gui.controllers.SettingsModalController"
      minHeight="480">
    <HBox VBox.vgrow="ALWAYS">
        <VBox VBox.vgrow="ALWAYS" minWidth="120" maxWidth="120" styleClass="settings-navigation-drawer">
            <fx:define>
                <ToggleGroup fx:id="navToggleGroup"/>
            </fx:define>
            <ToggleButton mnemonicParsing="false" HBox.hgrow="ALWAYS" text="General" fx:id="navGeneral"
                          toggleGroup="$navToggleGroup" maxWidth="Infinity" selected="true"/>
            <ToggleButton mnemonicParsing="false" HBox.hgrow="ALWAYS" text="Fabrication" fx:id="navFabrication"
                          toggleGroup="$navToggleGroup" maxWidth="Infinity"/>
        </VBox>

        <StackPane>

            <GridPane hgap="10" vgap="10" fx:id="fabricationSettingsContainer">

                <VBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="2.0" GridPane.columnIndex="0"
                      GridPane.rowIndex="0">
                    <Label alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY" text="Template"
                           textAlignment="RIGHT"/>
                    <ChoiceBox fx:id="choiceTemplate" prefHeight="25.0" prefWidth="120"/>
                </VBox>

                <VBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="2.0" GridPane.columnIndex="1"
                      GridPane.rowIndex="0">
                    <Label fx:id="labelControlMode" alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY"
                           text="Control Mode" textAlignment="RIGHT"/>
                    <ChoiceBox fx:id="choiceControlMode" prefHeight="25.0" prefWidth="120"/>
                </VBox>

                <VBox alignment="CENTER_LEFT" spacing="2.0" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <Label alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY" text="Output Frame Rate"
                           textAlignment="RIGHT"/>
                    <TextField fx:id="fieldOutputFrameRate" prefHeight="25.0"/>
                </VBox>

                <VBox alignment="CENTER_LEFT" spacing="2.0" GridPane.columnIndex="3" GridPane.rowIndex="0">
                    <Label alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY" text="Output Channels"
                           textAlignment="RIGHT"/>
                    <TextField fx:id="fieldOutputChannels" prefHeight="25.0"/>
                </VBox>

                <VBox alignment="CENTER_LEFT" spacing="2.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY" text="Craft Ahead Seconds"
                           textAlignment="RIGHT"/>
                    <TextField fx:id="fieldCraftAheadSeconds" prefHeight="25.0"/>
                </VBox>

                <VBox alignment="CENTER_LEFT" spacing="2.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY" text="Dub Ahead Seconds"
                           textAlignment="RIGHT"/>
                    <TextField fx:id="fieldDubAheadSeconds" prefHeight="25.0"/>
                </VBox>

                <VBox alignment="CENTER_LEFT" spacing="2.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <Label alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY" text="Mixer Length Seconds"
                           textAlignment="RIGHT"/>
                    <TextField fx:id="fieldMixerLengthSeconds" prefHeight="25.0"/>
                </VBox>

                <VBox alignment="CENTER_LEFT" spacing="2.0" GridPane.columnIndex="3" GridPane.rowIndex="1">
                    <Label alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY" text="Timeline Segment View Limit"
                           textAlignment="RIGHT"/>
                    <TextField fx:id="fieldTimelineSegmentViewLimit" prefHeight="25.0"/>
                </VBox>
                <columnConstraints>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>

            </GridPane>

        </StackPane>
    </HBox>

    <HBox alignment="BOTTOM_RIGHT" prefHeight="20.0" prefWidth="668.0" spacing="10.0" styleClass="settings-bottom-bar">
        <Button fx:id="buttonClose" onAction="#handleClose" prefHeight="25.0" prefWidth="56.0" styleClass="button"
                text="_OK"/>
        <Button fx:id="buttonReset" onAction="#handleReset" prefHeight="25.0" prefWidth="56.0" styleClass="button"
                text="_Reset"/>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </HBox>
</VBox>
