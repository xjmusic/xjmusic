<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" spacing="10"
      fx:controller="io.xj.gui.controllers.ModalLabConnectionController" styleClass="modal-container">
  <padding>
    <Insets top="15" right="15" bottom="15" left="15"/> <!-- Padding values -->
  </padding>
  <VBox>
    <HBox alignment="CENTER_LEFT" prefHeight="41.0" prefWidth="640.0">
      <opaqueInsets>
        <Insets/>
      </opaqueInsets>
      <Label alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY" prefHeight="42.0" prefWidth="177.0"
             text="Lab URL" textAlignment="RIGHT">
        <graphic>
          <Pane prefHeight="100.0" prefWidth="15.0"/>
        </graphic>
      </Label>
      <Pane prefHeight="100.0" prefWidth="15.0"/>
      <TextField fx:id="fieldHubUrl" prefHeight="25.0" prefWidth="402.0"/>
    </HBox>
    <HBox alignment="CENTER_LEFT" prefHeight="41.0" prefWidth="640.0">
      <opaqueInsets>
        <Insets/>
      </opaqueInsets>
      <Label alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY" prefHeight="42.0" prefWidth="177.0" text="Access Token"
             textAlignment="RIGHT">
        <graphic>
          <Pane prefHeight="100.0" prefWidth="15.0"/>
        </graphic>
      </Label>
      <Pane prefHeight="100.0" prefWidth="15.0"/>
      <TextField fx:id="fieldHubAccessToken" prefHeight="25.0" prefWidth="401.0"/>
    </HBox>
  </VBox>

  <HBox spacing="10" alignment="CENTER_RIGHT">
    <Button text="Connect" fx:id="connectButton" onAction="#handleConnect"/>
    <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancel"/>
  </HBox>
</VBox>
