<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ToggleGroup?>
<VBox fx:id="container" stylesheets="@/styles/default-theme.css" xmlns="http://javafx.com/javafx/20.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.xj.gui.controllers.content.program.ProgramEditorController">

    <VBox.vgrow>
        <Priority fx:constant="ALWAYS"/>
    </VBox.vgrow>
    <VBox>
        <HBox alignment="CENTER_LEFT" prefHeight="23.0" prefWidth="607.0" spacing="5.0">
            <Button fx:id="configButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" mnemonicParsing="false" onAction="#handleEditConfig" prefHeight="30.0"
                    prefWidth="35.0" text=" ">
                <graphic>
                    <ImageView fitHeight="23.0" fitWidth="23.0" translateX="-2.0">
                        <Image url="@/icons/settings.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <fx:define>
                <ToggleGroup fx:id="editorModeToggleGroup"/>
            </fx:define>
            <ToggleButton fx:id="bindButton" toggleGroup="$editorModeToggleGroup" mnemonicParsing="false" prefHeight="30.0" prefWidth="45.0" text="Bind"/>
            <ToggleButton fx:id="editButton" toggleGroup="$editorModeToggleGroup" mnemonicParsing="false" prefHeight="30.0" prefWidth="45.0" text="Edit"/>
            <Button fx:id="copyButton" layoutX="85.0" layoutY="13.0" maxHeight="-Infinity" maxWidth="-Infinity"
                    minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#openCloneDialog"
                    prefHeight="30.0" prefWidth="35.0" text=" ">
                <graphic>
                    <ImageView fitHeight="23.0" fitWidth="23.0" translateX="-2.0">
                        <Image url="@/icons/copy-grey.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Label prefHeight="25.0" prefWidth="70.0" text="PROGRAM"/>
            <TextField fx:id="programNameField"/>
            <Label layoutX="193.0" layoutY="13.0" prefHeight="25.0" prefWidth="50.0" text="TYPE">
                <padding>
                    <Insets left="10.0"/>
                </padding>
            </Label>
            <ComboBox fx:id="typeChooser" prefHeight="25.0" prefWidth="102.0"/>
            <Label layoutX="416.0" layoutY="13.0" prefHeight="25.0" prefWidth="56.0" text="STATE">
                <padding>
                    <Insets left="10.0"/>
                </padding>
            </Label>
            <ComboBox fx:id="stateChooser" layoutX="475.0" layoutY="13.0" prefHeight="25.0" prefWidth="102.0"/>
            <Label layoutX="566.0" layoutY="13.0" prefHeight="25.0" prefWidth="55.0" text="KEY">
                <padding>
                    <Insets left="10.0"/>
                </padding>
            </Label>
            <TextField fx:id="keyField" layoutX="261.0" layoutY="13.0" prefHeight="25.0" prefWidth="89.0"/>
            <Label layoutX="732.0" layoutY="13.0" prefHeight="25.0" prefWidth="60.0" text="TEMPO">
                <padding>
                    <Insets left="5.0"/>
                </padding>
            </Label>
            <Spinner fx:id="tempoChooser" editable="true" prefHeight="25.0" prefWidth="111.0"/>
        </HBox>
        <StackPane fx:id="programMemeContainer"/>
    </VBox>
    <HBox alignment="CENTER_LEFT" prefHeight="37.0" prefWidth="1231.0" spacing="5.0"
          styleClass="sequence-management-control-bar">
        <Group fx:id="gridAndZoomGroup">
            <Label fx:id="gridLabel" prefHeight="30.0" prefWidth="48.0" text="GRID:">
                <font>
                    <Font size="14.0"/>
                </font>
                <padding>
                    <Insets left="5.0"/>
                </padding>
            </Label>
            <ComboBox fx:id="gridChooser" focusTraversable="false" layoutX="53.33333206176758"
                      layoutY="0.6666665077209473"
                      prefHeight="28.0" prefWidth="73.0"/>
            <Label layoutX="135.0" prefHeight="30.0" prefWidth="63.0" text="Zoom:">
                <font>
                    <Font size="14.0"/>
                </font>
                <padding>
                    <Insets left="5.0"/>
                </padding>
            </Label>
            <ComboBox fx:id="zoomChooser" layoutX="200.6666717529297" layoutY="0.6666665077209473" prefHeight="28.0"
                      prefWidth="73.0"/>
        </Group>
        <ToggleButton fx:id="snapButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                      minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="45.0" text="Snap"/>
        <Label alignment="CENTER_RIGHT" layoutX="10.0" layoutY="14.0" prefHeight="30.0" prefWidth="97.0"
               text="Sequence :">
            <font>
                <Font size="14.0"/>
            </font>
            <padding>
                <Insets left="5.0"/>
            </padding>
        </Label>
        <Button fx:id="sequenceButton" layoutX="481.0" layoutY="13.0" minHeight="-Infinity" minWidth="-Infinity"
                mnemonicParsing="false" prefHeight="31.0" prefWidth="35.0" text=" ">
            <graphic>
                <ImageView fitHeight="23.0" fitWidth="17.0">
                    <Image url="@/icons/down-arrow.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="sequenceMenuLauncher" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false"
                prefHeight="31.0" prefWidth="35.0" text=" ">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0">
                    <Image url="@/icons/hamburger-menu.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Group>
            <Group fx:id="sequenceItemGroup">
                <TextField fx:id="sequenceName" layoutY="5.333333492279053" prefHeight="27.0" prefWidth="173.0"/>
                <Label alignment="CENTER_RIGHT" layoutX="178.66668701171875" layoutY="4.0" prefHeight="30.0"
                       prefWidth="67.0" text="TOTAL :">
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <padding>
                        <Insets left="2.0"/>
                    </padding>
                </Label>
                <StackPane layoutX="251.33331298828125" prefHeight="37.0" prefWidth="103.0">
                    <Spinner fx:id="sequenceTotalChooser" editable="true" prefHeight="29.0" prefWidth="119.0"/>
                    <Label fx:id="sequenceTotalLabel" prefHeight="29.0" prefWidth="103.0" text="16">
                        <padding>
                            <Insets left="5.0"/>
                        </padding>
                    </Label>
                </StackPane>
                <Label alignment="CENTER_RIGHT" layoutX="360.0" layoutY="4.0" prefHeight="30.0" prefWidth="55.0"
                       text="KEY :">
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </Label>
                <TextField fx:id="sequenceKey" layoutX="420.66668701171875" layoutY="5.333333492279053"
                           prefHeight="27.0" prefWidth="40.0" text="C"/>
                <Label alignment="CENTER_RIGHT" layoutX="466.0" layoutY="4.0" prefHeight="30.0" prefWidth="85.0"
                       text="INTENSITY :">
                    <font>
                        <Font size="14.0"/>
                    </font>
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </Label>
                <StackPane layoutX="556.6666259765625" prefHeight="37.0" prefWidth="90.0">
                    <Spinner fx:id="sequenceIntensityChooser" editable="true" prefHeight="29.0" prefWidth="119.0"/>
                    <Label fx:id="sequenceIntensityLabel" prefHeight="29.0" prefWidth="119.0" text="0.6">
                        <padding>
                            <Insets left="5.0"/>
                        </padding>
                    </Label>
                </StackPane>
            </Group>
            <Label fx:id="noSequenceLabel" layoutX="4.3333282470703125" layoutY="5.333333492279053" prefHeight="27.0" prefWidth="219.0" text="NO SEQUENCE">
                <font>
                    <Font name="System Bold Italic" size="12.0" />
                </font>
            </Label>
        </Group>
    </HBox>
    <StackPane VBox.vgrow="ALWAYS">
        <ScrollPane fx:id="bindModeScrollPane" fitToHeight="true" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <HBox fx:id="bindViewParentContainer" alignment="CENTER_LEFT">
                <VBox fx:id="labelHolder" minWidth="-Infinity" prefHeight="312.0" prefWidth="106.0">
                    <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="17.0" prefWidth="107.0" styleClass="bind-mode-label" text="OFFSET" textFill="GREY" VBox.vgrow="ALWAYS">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                    <Label alignment="CENTER" contentDisplay="RIGHT" minWidth="-Infinity" prefHeight="37.0" prefWidth="72.0" styleClass="sequence-memes-label" text="SEQUENCES + MEMES" textAlignment="CENTER" textFill="GREY" wrapText="true" VBox.vgrow="ALWAYS">
                        <font>
                            <Font name="System Bold" size="12.0" />
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </ScrollPane>
        <ScrollPane fx:id="editModeScrollPane" fitToHeight="true" fitToWidth="true" styleClass="program-editor-scroll-pane" StackPane.alignment="CENTER">
            <content>
                <VBox fx:id="editModeContainer" prefHeight="200.0" prefWidth="100.0" spacing="2.0" styleClass="edit-mode-container">
                    <Button fx:id="editModeAddButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="33.0" prefWidth="1231.0" VBox.vgrow="ALWAYS">
                        <graphic>
                            <ImageView fitHeight="23.0" fitWidth="23.0">
                                <image>
                                    <Image url="@/icons/plus.png" />
                                </image>
                            </ImageView>
                        </graphic>
                        <VBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </VBox.margin>
                    </Button>
                </VBox>
            </content>
            <padding>
                <Insets left="2.0" />
            </padding>
        </ScrollPane>
    </StackPane>
    <padding>
        <Insets top="5.0"/>
    </padding>

</VBox>
