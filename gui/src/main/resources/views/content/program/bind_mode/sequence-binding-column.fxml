<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="sequenceBindingColumnContainer"
      stylesheets="@/styles/default-theme.css" xmlns="http://javafx.com/javafx/20.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.xj.gui.controllers.content.program.bind_mode.SequenceBindingColumnController"
      minWidth="200" HBox.hgrow="ALWAYS" maxWidth="Infinity">
    <Label fx:id="offsetText"
           minHeight="20" maxHeight="20" styleClass="bind-mode-label" text="0" HBox.hgrow="ALWAYS"
           maxWidth="Infinity"/>
    <VBox styleClass="sequence-binding-column-container" spacing="5">
        <VBox fx:id="sequenceBindingColumnContentContainer" spacing="5">
            <!-- This is where the sequence binding items will be added -->
        </VBox>
        <Button fx:id="addSequenceButton" onMouseClicked="#handlePressedAddSequenceBinding" mnemonicParsing="false"
                text="+"
                HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
    </VBox>
</VBox>
