<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<AnchorPane fx:id="mainBorderPane" styleClass="sequence-binding-item-container" stylesheets="@/styles/default-theme.css"
            xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.xj.gui.controllers.content.program.bind_mode.SequenceBindingItemController">
    <Label fx:id="sequenceName" text="Text"
           AnchorPane.topAnchor="0"
           AnchorPane.leftAnchor="0"
           AnchorPane.rightAnchor="20"/>
    <Button mnemonicParsing="false" styleClass="sequence-item-button"
            AnchorPane.rightAnchor="0"
            AnchorPane.topAnchor="0"
            onAction="#handleDeleteSequenceBinding"
            minWidth="30" maxWidth="30">
        <graphic>
            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@/icons/delete.png"/>
            </ImageView>
        </graphic>
    </Button>
    <StackPane fx:id="sequenceBindingMemeContainer"
               maxWidth="300"
               AnchorPane.topAnchor="20"
               AnchorPane.rightAnchor="0"
               AnchorPane.leftAnchor="0"
               AnchorPane.bottomAnchor="0"/>
</AnchorPane>
