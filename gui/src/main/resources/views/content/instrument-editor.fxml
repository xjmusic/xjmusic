<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<VBox
  fx:controller="io.xj.gui.controllers.content.InstrumentEditorController"
  fx:id="container"
  xmlns="http://javafx.com/javafx/17.0.2-ea"
  xmlns:fx="http://javafx.com/fxml/1"
  spacing="5.0">

  <VBox.vgrow>
    <Priority fx:constant="ALWAYS"/>
  </VBox.vgrow>

  <padding>
    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
  </padding>

  <VBox>
    <Label alignment="CENTER_RIGHT" contentDisplay="TEXT_ONLY" text="Name" textAlignment="RIGHT">
      <graphic>
        <Pane prefWidth="15.0"/>
      </graphic>
    </Label>
    <Pane prefWidth="15.0"/>
    <TextField fx:id="fieldName" prefHeight="25.0"/>
  </VBox>

  <HBox spacing="10">
    <Button
      fx:id="buttonSave"
      onAction="#handlePressSave"
      text="Save"/>
  </HBox>

  <Label>FUTURE: Instrument Editor</Label>

</VBox>
