<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="io.xj.gui.controllers.MainPaneTopController">
  <HBox alignment="CENTER" styleClass="top-pane-status-container"
        xmlns:fx="http://javafx.com/fxml">
    <HBox.hgrow>
      <Priority fx:constant="ALWAYS"/>
    </HBox.hgrow>
    <padding>
      <Insets top="6" left="9" right="9" bottom="6"/>
    </padding>
    <HBox alignment="CENTER_LEFT" spacing="9"
          xmlns:fx="http://javafx.com/fxml">

      <Button mnemonicParsing="false" onAction="#handleRunCycleManualOverride" text="Run Cycle">
        <font>
          <Font name="System Bold"/>
        </font>
      </Button>

      <Button fx:id="buttonAction" mnemonicParsing="false" onAction="#handleButtonActionPress" text="Action">
        <font>
          <Font name="System Bold"/>
        </font>
      </Button>

      <ToggleButton fx:id="buttonToggleFollowPlayback" text="Follow"/>

      <Button fx:id="buttonShowFabricationSettings" onAction="#handleShowFabricationSettings">
        <graphic>
          <SVGPath styleClass="icon" content="M3 6h12v2h-12zM3 11h12v2h-12zM3 16h12v2h-12z"/>
        </graphic>
      </Button>

      <!-- Fabrication Status Text -->
      <Label fx:id="labelFabricationStatus" text="Initializing"/>

      <ProgressBar fx:id="progressBarFabrication" prefWidth="100" progress="0.0"/>

    </HBox>
    <HBox alignment="CENTER_RIGHT" spacing="10"
          xmlns:fx="http://javafx.com/fxml">
      <HBox.hgrow>
        <Priority fx:constant="ALWAYS"/>
      </HBox.hgrow>

      <!-- Lab Connection Status Text -->
      <Label fx:id="labelLabStatus" text="Initializing"/>

      <!-- Lab Button -->
      <Button fx:id="buttonLab" onAction="#handleButtonLabPressed" text="Lab"/>

    </HBox>
  </HBox>
</VBox>
