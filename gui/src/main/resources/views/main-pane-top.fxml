<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>
<HBox
  fx:controller="io.xj.gui.controllers.MainPaneTopController"
  alignment="CENTER"
  styleClass="top-pane-status-container"
  xmlns:fx="http://javafx.com/fxml"
  xmlns="http://javafx.com/javafx/20.0.1">
  <padding>
    <Insets top="6" left="9" right="9" bottom="6"/>
  </padding>
  <HBox.hgrow>
    <Priority fx:constant="ALWAYS"/>
  </HBox.hgrow>

  <HBox alignment="CENTER_LEFT" spacing="10"
        xmlns:fx="http://javafx.com/fxml">
    <HBox.hgrow>
      <Priority fx:constant="ALWAYS"/>
    </HBox.hgrow>

    <fx:define>
      <ToggleGroup fx:id="viewMode"/>
    </fx:define>

    <ToggleButton fx:id="buttonContent"
                  toggleGroup="$viewMode"
                  mnemonicParsing="false"
                  onAction="#handlePressedButtonContent"
                  text="Content">
      <font>
        <Font name="Roboto"/>
      </font>
    </ToggleButton>

    <ToggleButton fx:id="buttonTemplate"
                  toggleGroup="$viewMode"
                  mnemonicParsing="false"
                  onAction="#handlePressedButtonTemplate"
                  text="Templates">
      <font>
        <Font name="Roboto"/>
      </font>
    </ToggleButton>

    <ToggleButton fx:id="buttonFabrication"
                  toggleGroup="$viewMode"
                  mnemonicParsing="false"
                  onAction="#handlePressedButtonFabrication"
                  text="Fabrication">
      <font>
        <Font name="Roboto"/>
      </font>
    </ToggleButton>

    <Button fx:id="buttonCancelLoading"
            mnemonicParsing="false"
            onAction="#handlePressedCancelLoading"
            text="Cancel">
      <font>
        <Font name="Roboto"/>
      </font>
    </Button>

    <HBox
      fx:id="fabricationControlContainer"
      alignment="CENTER_LEFT" spacing="10"
      xmlns:fx="http://javafx.com/fxml">
      <Label>
        â†’
      </Label>

      <Button fx:id="buttonAction" mnemonicParsing="false" onAction="#handleButtonActionPress" text="Action">
        <font>
          <Font name="Roboto"/>
        </font>
      </Button>

      <ToggleButton fx:id="buttonToggleFollowPlayback" text="Follow"/>

      <Button fx:id="buttonShowFabricationSettings" onAction="#handleShowFabricationSettings">
        <graphic>
          <SVGPath styleClass="icon" content="M3 6h12v2h-12zM3 11h12v2h-12zM3 16h12v2h-12z"/>
        </graphic>
      </Button>
    </HBox>

    <HBox
      alignment="CENTER_LEFT" spacing="10"
      xmlns:fx="http://javafx.com/fxml">
      <ProgressBar fx:id="progressBar" prefWidth="100" progress="0.0"/>
      <Label fx:id="labelStatus" prefWidth="180" text="Initializing"/>
    </HBox>

  </HBox>

  <HBox alignment="CENTER_RIGHT" spacing="10"
        xmlns:fx="http://javafx.com/fxml">
    <HBox.hgrow>
      <Priority fx:constant="ALWAYS"/>
    </HBox.hgrow>

    <!-- Lab Connection Status Text -->
    <Label fx:id="labelLabStatus" text="Initializing"/>

    <!-- Lab Button -->
    <Button fx:id="buttonLab" onAction="#handleButtonLabPressed" text="Lab"/>

  </HBox>
</HBox>
